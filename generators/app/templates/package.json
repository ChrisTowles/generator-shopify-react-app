{
  "name": "<%= appname %>",
  "version": "0.1.0",
  "description": "<%= appname %> (built using Shopify React Starter)",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack/prod.config.js",
    "clean": "rm -rf coverage/* dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --type-check",
    "prebuild": "npm run clean && npm run lint",
    "pretest": "npm run build",
    "start": "webpack-dev-server --config ./webpack/dev.config.js --open -d",
    "test": "jest --coverage",
    "update:schema": "apollo-codegen introspect-schema <%= graphqlApiUrl %> > schema.json && apollo-codegen generate **/*.graphql --schema schema.json --target typescript --output src/schema.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buggy/generator-shopify-react-app.git"
  },
  "author": "Rich Buggy <rich@buggy.id.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buggy/generator-shopify-react-app/issues"
  },
  "homepage": "https://github.com/buggy/generator-shopify-react-app#readme",
  "dependencies": {
    "@shopify/polaris": "^1.7.0",
    "react": "^15.6.1",
    "react-apollo": "^1.4.16",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.7",
    "@types/jest": "^21.1.3",
    "@types/react": "^15.6.2",
    "@types/react-dom": "^15.5.4",
    "@types/react-helmet": "^5.0.3",
    "@types/react-router-dom": "^4.0.7",
    "@types/react-test-renderer": "^15.5.4",
    "apollo-codegen": "^0.16.5",
    "awesome-typescript-loader": "^3.2.3",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "node-sass": "^4.5.3",
    "react-test-renderer": "^15.6.1",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.2",
    "style-loader": "^0.19.0",
    "ts-jest": "^21.1.2",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "^3.8.0",
    "webpack-dev-server": "^2.9.2",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|sass|scss|less)$": "identity-obj-proxy"
    }
  }
}
