{
  "name": "shopify-react-starter",
  "version": "0.1.0",
  "description": "Shopify React Starter Kit",
  "main": "index.js",
  "scripts": {
    "build": "webpack ./webpack.config.js --env.dev",
    "clean": "rm -rf dist/*",
    "lint": "tslint -p tsconfig.json --type-check",
    "prebuild": "npm run clean && npm run lint",
    "prestart": "npm test",
    "pretest": "npm run build",
    "start": "webpack-dev-server ./webpack.config.js --env.dev --content-base ./",
    "test": "jest --coverage",
    "update:schema": "apollo-codegen introspect-schema <%= graphqlApiUrl %> > schema.json && apollo-codegen generate **/*.graphql --schema schema.json --target typescript --output src/schema.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buggy/shopify-react-starter.git"
  },
  "author": "Rich Buggy <rich@buggy.id.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buggy/shopify-react-starter/issues"
  },
  "homepage": "https://github.com/buggy/shopify-react-starter#readme",
  "dependencies": {
    "@shopify/polaris": "^1.2.1",
    "react": "^15.6.1",
    "react-apollo": "^1.4.8",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.4",
    "@types/jest": "^20.0.5",
    "@types/react": "^15.6.0",
    "@types/react-dom": "^15.5.1",
    "@types/react-helmet": "^5.0.3",
    "@types/react-router-dom": "^4.0.7",
    "@types/react-test-renderer": "^15.5.2",
    "apollo-codegen": "^0.16.1",
    "awesome-typescript-loader": "^3.2.2",
    "enzyme": "^2.9.1",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.6.1",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "webpack": "^3.5.3",
    "webpack-dev-server": "^2.7.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
